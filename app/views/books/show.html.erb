
<div class="card center">
  <%= image_tag "book.png", width: 200, height: 200 %>
  <div class="card-body">
    <h5 class="card-text padding-top">
      <strong>Book title:</strong>
      <%= @book.book_title %>
    </h5>

    <h5 class="card-text">
      <strong>Author:</strong>
      <%= @book.author %>
    </h5>

    <div class="padding-top">
      <%= link_to 'Edit', edit_book_path(@book), class: "card-link btn btn-success white btn-width" %> 
      <%= link_to 'Back', books_path, class: "card-link btn btn-dark white btn-width" %>
    </div>

  </div>
</div>
