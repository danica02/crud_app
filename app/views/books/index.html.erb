
<h2>List of Books</h2>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-custom">
    <tr>
      <th class="center">Book title</th>
      <th class="center">Author</th>
      <th class="center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_title %></td>
        <td><%= book.author %></td>
        <td class="center">
          <%= link_to '', book, class:"btn btn-primary bi bi-eye-fill white" %>
          <%= link_to '', edit_book_path(book), class:"btn btn-success bi bi-pencil-square white" %>
          <%= link_to '', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger bi bi-trash-fill white" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class:"btn btn-danger white" %>
